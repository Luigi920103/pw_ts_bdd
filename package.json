{
  "name": "playwright-ts-bdd",
  "version": "1.0.0",
  "description": "the repository has a playwright BDD project using TS and Gherkin languages and also has cucumber",
  "main": "index.js",
  "scripts": {
    "test-all": "npx bddgen && npx playwright test --workers=2 --config=./playwright.config.ts --project=chrome-parallel --grep @all",
    "debug": "npx bddgen && npx playwright test --workers=1 --config=./playwright.config.ts --project=debug --grep @debugUi",
    "apiDebug": "npx bddgen && npx playwright test --workers=3 --config=./playwright.config.ts --project=api --grep @onlyThis",
    "watch": "run-p watch:*",
    "watch:bdd": "nodemon -w ./features -w ./steps -e feature,ts --exec \"npx bddgen\"",
    "watch:pw": "npx bddgen && npx playwright test --ui",
    "report": "npx http-server ./cucumber-report -c-1 -o index.html",
    "allure:clean": "rimraf allure-results allure-report",
    "allure:generate": "npx allure generate allure-results --clean -o allure-report",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^10.0.0",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "http-server": "14.1.1",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "playwright-bdd": "^8.4.1",
    "prettier": "3.6.2",
    "prettier-plugin-gherkin": "^3.1.3",
    "rimraf": "^6.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "allure-js-commons": "^3.4.5",
    "dayjs": "^1.11.19",
    "dotenv": "^17.2.3",
    "joi": "^18.0.1",
    "mongodb": "^6.20.0",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  }
}
